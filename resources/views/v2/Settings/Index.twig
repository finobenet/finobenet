<html>
  <head>
    {% include ('v2/Modules/head.twig') %}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
  </head>
  <body>
    <div id="app">
      {% include ('v2/Modules/nav.twig') %}
      <style>
                .close-modal {
                    left: 100%;
                }
                </style>
            <div class="container mt-4">
                <div class="row">
                    <div class="col-lg-2 mb-2">
                        <div>
                            <strong>
                                <p>Settings</p>
                            </strong>
                            <p class="mb-1 text-primary"><strong>User Details</strong></p>
                            <p class="mb-1">Password</p>
                            <p class="mb-1">Security</p>
                            <p class="mb-1">Privacy</p>
                            <p class="mb-1"><a href="/app/theme">Theming</a></p>
                            <p class="mb-1">Language</p>
                            <p class="mb-1"><a href="/app/games">Places</a></p>
                            <p class="mb-1"><a href="/app/connect">Connect</a></p>
                        </div>
                    </div>
                    <div class="col-lg-10 mb-2">
                        <div class="card">
                            <div class="card-body">
                                <p class="mb-1" style="margin-bottom:0px;"><strong>Username: </strong>
                                    {{ data.user.username }}
                                </p>
                                <p style="margin-bottom: 0px;">
                                    <strong>E-mail: </strong>
                                    {{ data.user.email }}
                                    <a href="#ex1" rel="modal:open" style="color:inherit">
                                        <i class="far align-middle fa-pen-square ml-1" style="float:right;margin-top:5px;"></i>
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="mt-3">
                            <form role="form" method="POST" action="/app/settings" enctype="multipart/form-data">
                                <input type="hidden" name="_token" value="{{ data.csrf_token }}">
                                <div class="form-group row">
                                    <label for="blurb" class="col-form-label text-md-right" style="margin-left:15px;">
                                        <h4 style="font-weight: 300;">Blurb</h4>
                                    </label>
                                    <div class="col-md-12">
                                        <textarea type="text" id="blurb" name="blurb" value="" placeholder="Blurb"
                                            class="form-control" rows="8">{{ data.user.blurb }}</textarea>
                                    </div>
                                    <label class="col-form-label text-md-right row"
                                        style="margin-left:15px;"><strong>Note:</strong>
                                        <p class="text-danger" style="margin:0 3px 0 3px">${myDius}</p> will be replaced with
                                        the amount of Dius you have.
                                    </label>
                                </div>
                                <div class="form-group col-md-2" style="margin-top: 40px; padding-left: 0px;">
                                    <button type="submit" class="btn btn-success ">update</button>
                                </div>
                            </form>
                        </div>
                        {% if data.user.status == "admin" %}
                        <div class="mt-3">
                            <form role="form" method="POST" action="/app/settings" enctype="multipart/form-data">
                                <input type="hidden" name="_token" value="{{ data.csrf_token }}">
                                <div class="form-group row">
                                    <label for="pfp" class="col-form-label text-md-right" style="margin-left:15px;">
                                        <h4 style="font-weight: 300;">Profile picture</h4>
                                    </label>
                                    <div class="col-md-12">
                                        <input type="file" name="file" />
                                    </div>
                                    <label class="col-form-label text-md-right row"
                                        style="margin-left:15px;"><strong style="margin:0 3px 0 0">Note:</strong>ratio of image must be 1:1
                                    </label>
                                </div>
                                <div class="form-group col-md-2" style="margin-top: 40px; padding-left: 0px;">
                                    <button type="submit" class="btn btn-success ">update</button>
                                </div>
                            </form>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
    </div>
	<div id="ex1" class="modal container" style="padding:0">
            <div class="container" style="padding:0">
                <div class="card" style="">
                    <div class="card-header" style="display: flex; align-items: center;">
                        <a href="#close-modal" rel="modal:close" style="margin-right: 5px;">
                            <button class="btn btn-{{ (data.user.theme == "night") ? "secondary" : "light" }}">
                                <i class="far fa-chevron-left"></i>
                            </button>
                        </a>
                        <p style="margin: 0;">Change Email</p>
                    </div>
                    <div class="card-body">
                        <form role="form" method="POST" action="/app/settings">
                            <input type="hidden" name="_token" value="{{ data.csrf_token }}">
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <label for="email" class="col-form-label">New E-mail</label>
                                    <input type="email" name="email" value="" placeholder="New E-mail" required class="form-control">
                                    <label for="password" class="col-form-label">Confirm Password</label>
                                    <input type="password" name="password" value="" placeholder="Password" required class="form-control">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary full-width">Change</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% include ('v2/Modules/footer.twig') %}
  </body>
</html>