                                                <p>
                                                    <a href="/app/inbox/compose?user={{ data.profile.username }}" class="btn btn-theme mr-2 nowrap">
                                                        Send Message
                                                    </a>
                                                </p>
                                                <p>
                                                    <a href="#" class="btn btn-theme mr-2 nowrap">
                                                        Trade
                                                    </a>
                                                </p>
                                                {% for friend in data.user.friends %}
                                                    {% if friend.userid == data.profile.id %}
